extends _global/_layout

block vars
    -pageTitle ="Восстановление пароля"
    -pageName ="recovery"

block page
    .irs__login-wrap.irs__recovery
        .irs__login-close
            a(href="#"): img(src="img/registration/close.png" alt="")
        h1.title.irs__login-title Восстановление пароля
        .irs__login
            form.irs__login-form-wrap(action="#" method="post")
                fieldset.layout-form-vert-1
                    .layout-form-row
                        label(for="email") E-mail
                        input.input(type="email" id="email")

                .irs__login-button
                    input.button(type="submit" value="Отправить")
