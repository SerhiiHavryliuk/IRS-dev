extends ../../_global/_demo-layout

block vars
    - pageTitle = "Form components"
    - pageName = "demo-forms-layouts"

block page
    .layout-main

        .demo-row
            .demo-title#demo-title-1 Общие замечания
            .demo-desc
                | - layoutы построены на flexbox модели<br>
                | - можно использовать как grid, так обойтись и без сеток

        .demo-row
            .demo-title#demo-title-2 Vertical layout (labels on the top)
            .demo-sub-title  Live example:
            .demo-live-example
                form(action="#" method="post")
                    fieldset.layout-form-vert-1
                        .layout-form-row
                            label(for="input1") Label 1
                            input.input(type="text" id="input1" value="")
                        .layout-form-row
                            label(for="input2") Label 2
                            input.input(type="text" id="input2" value="")
                        .layout-form-row
                            input.button(type="submit" value="Save")


            .demo-sub-title  Jade code:
            pre(class="brush: js; gutter: false")
                | form(action="#" method="post")
                |   fieldset.layout-form-vert-1
                |       .layout-form-row
                |           label(for="input1") Label 1
                |           input.input(type="text" id="input1" value="")
                |       .layout-form-row
                |           label(for="input2") Label 2
                |           input.input(type="text" id="input2" value="")
                |       .layout-form-row
                |           input.button(type="submit" value="Save")
            .demo-sub-title Imports SCSS:
            pre(class="brush: js; gutter: false")
                | @import "components/forms/layout-vert-1";


        .demo-row
            .demo-title#demo-title-3 Vertical layout (labels on the left)
            .demo-sub-title  Live example:
