extends ../../_global/_demo-layout
include ../../components/cards/_e-card-1

block vars
    - pageTitle = "Ecommerce cards"
    - pageName = "demo-cards-ecommerce"

block page
    .layout-main

        .demo-row
            .demo-title#demo-title-1 Standard card
            .demo-sub-title  Live example:
            .demo-live-example
                +e-card-1({
                    productName: "White T-shirt Nike",
                    picDesktop: "pic/catalog/item-1.png",
                    picMobile: "pic/catalog/item-1-m.jpg",
                    labelText: "Sale",
                    labelClass: "sale",
                    href: "#",
                    price: "$120",
                    oldPrice: "$150",
                    desc: "Lorem ipsum dolor sit amet",
                    buttonText: "В корзину"
                })
            .demo-sub-title Комментарии:
                .demo-desc
                    |- по умолчанию название объедиденено ссылкой с картинкой. Название можно без проблем вынести за пределы ссылки<br>
                    |- в примере приведен вариант с двумя картинками для адаптивности. Это можно без проблем убирать или расширять<br>
                    |- адаптивность катинки реализована через 2 тега и background-image, для простого позицинирования картинки и применения cover<br>
                    |- html код карточки настраиваем в view/components/cards/_e-card-1.jade и view/components/cards/_e-card-1-mixin.jade
            .demo-sub-title  Jade code:
                pre(class="brush: js; gutter: false")
                    |+e-card-1({
                    |    productName    : "White T-shirt Nike",
                    |    picDesktop     : "pic/catalog/item-1.png",
                    |    picMobile      : "pic/catalog/item-1-m.jpg",
                    |    labelText      : "Sale",
                    |    labelClass     : "sale",
                    |    href           : "#",
                    |    price          : "$120",
                    |    oldPrice       : "$150",
                    |    desc           : "Lorem ipsum dolor sit amet",
                    |    buttonText     : "В корзину"
                    |})

            .demo-sub-title Dependencies:
                .demo-desc
                    | - views/components/cards/_e-card-1.jade<br>
                    | - static/sass/components/cards/_e-card-1.scss
            .demo-sub-title Dependencies not required:
                .demo-desc
                    | - components/forms/button // если используется кнопка<br>
            .demo-sub-title  Include Jade:
                pre(class="brush: js; gutter: false")
                    |include components/cards/_e-card-1
            .demo-sub-title  Include SCSS:
                pre(class="brush: js; gutter: false")
                    |@import "components/cards/_e-card-1";

    .demo-panel.demo-panel_inner
        .demo-panel__section
            demo-panel__title ON THIS PAGE:
            ul.demo-panel__list
                li: a(href="demo/cards/ecommerce#demo-title-1") Standard card
        .demo-panel__section
            ul.demo-panel__list
                li: a(href="demo/cards/ecommerce#") On the top



